<?xml version="1.0" encoding="utf-8"?>
<!--弹箱状态的item布局View-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/box_status_main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/box_item_layout"
        android:layout_width="132dp"
        android:layout_height="69dp"
        android:background="@mipmap/dtc_box_bg_offline"
        android:orientation="vertical">

        <!--头，弹箱标识-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="22dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="31dp"
                android:background="@mipmap/dtc_box_icon_shaowei" />

            <TextView
                android:id="@+id/box_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="门口哨"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <!--弹箱状态标识-->
        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ammo_box_line_status_icon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/dtc_box_icon_zidan_offline" />

            <TextView
                android:id="@+id/ammo_box_line_status_tv_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="弹箱在线"
                android:textColor="@color/white"
                android:textSize="9sp" />
        </LinearLayout>

        <!--弹箱是否开启标识-->
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ammo_box_open_status_icon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/dtc_box_icon_danxiang_4" />

            <TextView
                android:id="@+id/ammo_box_open_status_tv_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:text="弹箱门未打开"
                android:textColor="@color/white"
                android:textSize="9sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>